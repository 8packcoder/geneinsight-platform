{
  "name": "geneinsight-platform",
  "description": "AI-Powered Molecular Analysis Platform with LangChain",
  "version": "2.0.0",
  "type": "fullstack",
  "services": {
    "frontend": {
      "type": "static",
      "buildCommand": "npm run build",
      "outputDirectory": ".next",
      "framework": "nextjs",
      "environment": "production"
    },
    "backend": {
      "type": "python",
      "runtime": "python3.9",
      "workingDirectory": "ml_service",
      "startCommand": "python app.py",
      "buildCommand": "pip install -r requirements.txt && pip install transformers torch langchain-community --no-cache-dir",
      "environment": {
        "FLASK_ENV": "production",
        "TRANSFORMERS_CACHE": "/tmp/transformers_cache",
        "PYTHONUNBUFFERED": "1",
        "PORT": "5000"
      },
      "healthCheck": {
        "path": "/health",
        "interval": 30,
        "timeout": 10
      },
      "resources": {
        "memory": "2GB",
        "cpu": "1",
        "storage": "5GB"
      }
    },
    "database": {
      "type": "postgresql",
      "version": "13",
      "storage": "1GB"
    }
  },
  "domains": {
    "frontend": "geneinsight.apillon.io",
    "backend": "api.geneinsight.apillon.io"
  },
  "environment": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NEXT_PUBLIC_API_URL": "https://api.geneinsight.apillon.io",
    "DATABASE_URL": "${APILLON_DATABASE_URL}"
  },
  "features": {
    "langchain": true,
    "ai_models": ["microsoft/DialoGPT-small"],
    "molecular_analysis": true,
    "covid_analysis": true,
    "3d_visualization": true,
    "molecular_docking": true
  },
  "scaling": {
    "backend": {
      "minInstances": 1,
      "maxInstances": 3,
      "targetCPU": 70
    }
  }
}
