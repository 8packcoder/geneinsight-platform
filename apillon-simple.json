{
  "name": "geneinsight-platform",
  "description": "AI-Powered Molecular Analysis Platform",
  "version": "2.0.0",
  "services": {
    "backend": {
      "type": "python",
      "runtime": "python3.9",
      "workingDirectory": "ml_service",
      "startCommand": "python app.py",
      "buildCommand": "pip install --no-cache-dir -r requirements.txt",
      "environment": {
        "FLASK_ENV": "production",
        "PORT": "5000",
        "PYTHONUNBUFFERED": "1"
      },
      "healthCheck": {
        "path": "/health",
        "interval": 60,
        "timeout": 30
      },
      "resources": {
        "memory": "1GB",
        "cpu": "0.5"
      }
    }
  },
  "environment": {
    "NODE_ENV": "production"
  }
}
